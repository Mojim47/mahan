<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="Widget.Delivery.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_primary_bg</item>
        <item name="android:textColor">@color/btn_primary_text</item>
        <item name="rippleColor">@color/md_theme_on_primary</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="iconTint">@color/md_theme_on_primary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Widget.Delivery.Button.Tonal" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_tonal_bg</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="rippleColor">@color/md_theme_secondary_container</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconTint">@color/md_theme_on_surface</item>
    </style>

    <style name="Widget.Delivery.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/btn_outline_stroke</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="rippleColor">@color/md_theme_primary_container</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconTint">@color/md_theme_primary</item>
    </style>

    <!-- Cards -->
    <style name="Widget.Delivery.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/md_theme_outline_variant</item>
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
    </style>

    <style name="Widget.Delivery.Card.Emphasis" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">3dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/md_theme_primary_container</item>
    </style>

    <style name="Widget.Delivery.TextInput.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/md_theme_outline</item>
        <item name="hintTextColor">@color/md_theme_on_surface_variant</item>
    </style>

    <!-- Fallback for Material3 FilledTonalButton on older Material components -->
    <style name="Widget.Material3.Button.FilledTonalButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/md_theme_secondary_container</item>
        <item name="android:textColor">@color/md_theme_on_secondary_container</item>
    </style>
</resources>
