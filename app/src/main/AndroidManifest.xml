<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DeliveryTracker"
        android:supportsRtl="true">
        <activity android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".ManageActivity" />
        <activity android:name=".SettleActivity" />
        <activity android:name=".EditOrderActivity" />
        <activity android:name=".ReportsActivity" />
        <activity android:name=".PaymentsActivity" />
        <activity android:name=".DriversListActivity" />
        <activity android:name=".AddDriverActivity" />
        <activity android:name=".CustomersListActivity" />
        <activity android:name=".AddCustomerActivity" />
    </application>

</manifest>
